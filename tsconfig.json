{
    "compilerOptions": {
        "target": "ESNext", // ESNext for modern JavaScript features
        "module": "NodeNext", // Set to NodeNext to match moduleResolution
        "moduleResolution": "NodeNext", // Resolves modules like Node.js
        "outDir": "dist", // Specify where compiled files will go
        "strict": true, // Enables strict mode for better type safety
        "esModuleInterop": true, // Ensures compatibility with CommonJS
        "resolveJsonModule": true, // Allows importing JSON files
        "skipLibCheck": true // Skips type checking for declaration files
    }
}
